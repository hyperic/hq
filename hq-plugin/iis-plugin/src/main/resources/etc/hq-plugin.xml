<plugin name="iis">
  <property name="PLUGIN_VERSION" value="@project.version@"/>
  <!-- Properties used for looking up metrics through the PDH -->
  <filter name="domain"
          value="\Web Service(${iishost})\" />
  <filter name="asp"
          value="\Active Server Pages\" />

  <!-- Common metrics for IIS servers and services. -->

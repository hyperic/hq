            alias="UsedMemory"
            template="${domain}:Module=jvmRuntimeModule:usedMemory"
            category="UTILIZATION"
            indicator="true"
            group="Resource Utilization"
            collectionType="dynamic"
            units="KB"/>
  </metrics>


<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.hyperic.hq</groupId>
		<artifactId>hq-parent</artifactId>
		<version>4.5.4.BUILD-SNAPSHOT</version>
	</parent>

	<groupId>org.hyperic.hq.dist</groupId>
	<artifactId>hyperic-hq-agent</artifactId>
	<packaging>pom</packaging>
	<name>Hyperic HQ Distribution - Hyperic HQ Agent</name>

	<dependencies>
		<dependency>
			<groupId>org.hyperic.hq.dist</groupId>
			<artifactId>agent</artifactId>
			<version>${project.version}</version>
			<type>tar.gz</type>
		</dependency>
		<dependency>
			<groupId>org.hyperic.jre</groupId>
			<artifactId>amd64-linux</artifactId>
			<version>1.5</version>
			<type>tar.gz</type>
		</dependency>
		<dependency>
			<groupId>org.hyperic.jre</groupId>
			<artifactId>x86-linux</artifactId>
			<version>1.5</version>
			<type>tar.gz</type>
		</dependency>
		<dependency>
			<groupId>org.hyperic.jre</groupId>
			<artifactId>sparc-sun-solaris</artifactId>
			<version>1.5</version>
			<type>tar.gz</type>
		</dependency> 
		<dependency>
			<groupId>org.hyperic.jre</groupId>
			<artifactId>hpux-11</artifactId>
			<version>1.5</version>
			<type>tar.gz</type>
		</dependency>
		<dependency>
			<groupId>org.hyperic.jre</groupId>
			<artifactId>x86-win32</artifactId>
			<version>1.5</version>
			<type>tar.gz</type>
		</dependency>
		<dependency>
			<groupId>org.hyperic.jre</groupId>
			<artifactId>ppc-aix</artifactId>
			<version>1.5</version>
			<type>tar.gz</type>
		</dependency> 
	</dependencies>
	
	<profiles>
		<profile>
    			<id>default</id>
				<activation>
       				<activeByDefault>true</activeByDefault>
   				</activation>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
					    			<descriptor>src/main/assembly/noJRE.xml</descriptor>
									<descriptor>src/main/assembly/apple-osx.xml</descriptor>
									<descriptor>src/main/assembly/hpux-11.xml</descriptor>
									<descriptor>src/main/assembly/ppc-aix.xml</descriptor>
									<descriptor>src/main/assembly/sparc-solaris.xml</descriptor>
									<descriptor>src/main/assembly/win32.xml</descriptor>
									<descriptor>src/main/assembly/x86-linux.xml</descriptor>
									<descriptor>src/main/assembly/x86-64-linux.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
		<profile>
    			<id>noJRE</id>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
									<descriptor>src/main/assembly/noJRE.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
		 <profile>
    			<id>apple-osx</id>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
									<descriptor>src/main/assembly/apple-osx.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
		<profile>
    			<id>hpux-11</id>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
									<descriptor>src/main/assembly/hpux-11.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
		<profile>
    			<id>ppc-aix</id>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
									<descriptor>src/main/assembly/ppc-aix.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
		<profile>
    			<id>sparc-solaris</id>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
									<descriptor>src/main/assembly/sparc-solaris.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
		<profile>
    			<id>win32</id>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
									<descriptor>src/main/assembly/win32.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
		<profile>
    			<id>x86-linux</id>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
									<descriptor>src/main/assembly/x86-linux.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
		<profile>
    			<id>x86-64-linux</id>
    			<build>
					<plugins>
						<plugin>
							<artifactId>maven-assembly-plugin</artifactId>
							<configuration>
								<descriptors>
									<descriptor>src/main/assembly/x86-64-linux.xml</descriptor>
								</descriptors>
							</configuration>
						</plugin>
					</plugins>
				</build>
  		</profile>
	</profiles>

	
	<repositories>
		<repository>
			<id>hyperic-jres</id>
			<name>Hyperic JREs Repository</name>
			<url>http://maven.hyperic.org/jres</url>
		</repository>
	</repositories>

</project>

<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hyperic.hq.galerts.server.session">
  <class name="GtriggerInfo" table="EAM_GTRIGGERS">
    <cache usage="read-write" />
    <id name="id" type="integer">
      <column name="ID" not-null="true" />
      <generator class="sequence">
        <param name="sequence">EAM_GTRIGGERS_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name ="VERSION_COL" default="0" />
    </version>

    <many-to-one name="configCrispo">
      <column name="CONFIG_ID" not-null="true"/>
    </many-to-one>

    <many-to-one name="typeInfo">
      <column name="TYPE_ID" not-null="true"/>
    </many-to-one>
    
    <many-to-one name="strategy">
      <column name="STRAT_ID" not-null="true"/>
    </many-to-one>

    <property name="listIndex">
      <column name="LIDX" not-null="true"/>
    </property>
  </class>
</hibernate-mapping>

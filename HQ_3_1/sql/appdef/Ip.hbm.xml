<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.hyperic.hq.appdef">

  <class name="Ip" table="EAM_IP">
    <cache usage="read-write"/>
    <id name="id" type="integer">
      <column name="ID" not-null="true"/>
      <generator class="sequence">
        <param name="sequence">EAM_IP_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name="VERSION_COL" default="0"/>
    </version>

    <properties name="ipId" unique="true">
      <many-to-one name="platform" class="org.hyperic.hq.appdef.server.session.Platform">
        <column name="PLATFORM_ID" not-null="true"/>
      </many-to-one>
      <property name="address" type="string">
        <column name="ADDRESS" not-null="true" length="64"/>
      </property>
    </properties>

    <property name="netmask" type="string">
      <column name="NETMASK" length="64"/>
    </property>

    <property name="macAddress" type="string">
      <column name="MAC_ADDRESS" length="64"/>
    </property>

    <property name="creationTime" type="long">
      <column name="CTIME"/>
    </property>

    <property name="modifiedTime" type="long">
      <column name="MTIME"/>
    </property>

    <property name="cid" type="integer">
      <column name="CID"/>
    </property>
  </class>

</hibernate-mapping>